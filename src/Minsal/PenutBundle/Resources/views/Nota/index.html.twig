{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Nota list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Alumno</th>
                <th>Materia</th>
                <th>Ciclo</th>
                <th>Notafinal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('nota_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idAlumno.getNombreAlumno() }}</td>
                <td>{{ entity.idMateria.getCodigoMateria() }}</td>
                <td>{{ entity.ciclo }}</td>
                <td>{{ entity.notaFinal }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('nota_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('nota_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('nota_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
